{
  "info": {
    "_postman_id": "YOUR_POSTMAN_COLLECTION_ID",
    "name": "User Resource API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_collection_link": "https://www.postman.com/collections/YOUR_POSTMAN_COLLECTION_ID"
  },
  "item": [
    {
      "name": "Get User Resource Utilization",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user-resources/resource-utilization",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user-resources",
            "resource-utilization"
          ]
        },
        "description": "Fetches the current available usage tokens, including total allocated, consumed, remaining balance, and expiration date, along with other resource utilizations like documents and storage."
      },
      "response": []
    },
    {
      "name": "Get User Subscription and Resource Details",
      "item": [
        {
          "name": "Get All Plan and Resource Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user-resources/plan-details",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "user-resources",
                "plan-details"
              ]
            },
            "description": "Fetches the user's active subscription plan details, all available plan configurations, and detailed resource utilization (all services)."
          },
          "response": []
        },
        {
          "name": "Get Plan and Resource Details (Filtered by Tokens)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user-resources/plan-details?service=tokens",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "user-resources",
                "plan-details"
              ],
              "query": [
                {
                  "key": "service",
                  "value": "tokens"
                }
              ]
            },
            "description": "Fetches the user's active subscription plan details and resource utilization, filtered specifically for 'tokens'."
          },
          "response": []
        }
      ],
      "description": "Collection of requests to fetch user subscription and resource details, with optional filtering."
    },
    {
      "name": "Get User Transactions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/user-resources/transactions",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "user-resources",
            "transactions"
          ]
        },
        "description": "Retrieves a complete list of past payment transactions and token usage logs for the user, sorted by date."
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string",
      "description": "Base URL for the API"
    },
    {
      "key": "userToken",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string",
      "description": "JWT token for an authenticated user"
    }
  ]
}